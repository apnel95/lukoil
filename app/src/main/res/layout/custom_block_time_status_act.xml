<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/timeStatus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сегодня"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            android:onClick="toToday"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Неделя"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            android:layout_weight="1"
            android:onClick="toWeek"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Месяц"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            android:layout_weight="1"
            android:onClick="toMonth"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Все"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            android:layout_weight="1"
            android:onClick="toAll"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="В работе"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            android:layout_weight="1"
            android:onClick="toJob"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonReady"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Готово"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            android:layout_weight="1"
            android:onClick="toReady"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Все"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            app:cornerRadius="30dp"
            android:layout_weight="1"
            android:onClick="toAll1"/>

    </LinearLayout>

</LinearLayout>